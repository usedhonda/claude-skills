    title: ""               # タスク名（簡潔に）
    branch: ""              # cc/{timestamp}/t01-{slug}
    scope:
      include:              # 触っていいパス
        - ""
      exclude:              # 触らないパス（重要！）
        - ""
    done:                   # 完了条件（テスト含む）
      - ""
    risk: low               # low | medium | high
    dependencies: []        # 依存タスクID

  - id: T02
    title: ""
    branch: ""
    scope:
      include:
        - ""
      exclude:
        - ""
    done:
      - ""
