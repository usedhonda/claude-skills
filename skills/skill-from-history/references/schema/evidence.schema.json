{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-skills.dev/schemas/evidence.json",
  "title": "Evidence",
  "description": "Evidence supporting a pattern or constraint",
  "type": "object",
  "required": ["id", "type", "date"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^E[0-9]+$",
      "description": "Evidence identifier (E1, E2, ...)"
    },
    "type": {
      "type": "string",
      "enum": ["session", "commit", "code", "adr", "manual"],
      "description": "Evidence source type"
    },
    "source_id": {
      "type": "string",
      "description": "Source identifier (session ID, commit hash, file path)"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "When the evidence was created"
    },
    "excerpt": {
      "type": "string",
      "description": "Relevant excerpt from the source"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score (0-1)"
    },
    "recency_weight": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Weight based on age"
    },
    "weighted_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "confidence * recency_weight"
    },
    "provenance": {
      "type": "object",
      "description": "For cross-project evidence",
      "properties": {
        "source_project": {
          "type": "string"
        },
        "source_epoch": {
          "type": "string"
        },
        "imported_at": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
